<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".previousmatches"
    tools:showIn="@layout/activity_previousmatches">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/previous_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33A8A8A8"
            android:text="@string/prev_matches"
            android:textAllCaps="true"
            android:textColor="#304848"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace" />

        <ListView
            android:id="@+id/Liste_matches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="#33A8A8A8">

        </ListView>

        <Button
            android:id="@+id/GoBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="4"
            android:background="#CAA882"
            android:onClick="myClickGoBack"
            android:text="@string/returnmatch"
            android:textColor="#1A2020"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>