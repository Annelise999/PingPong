<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".recapmatch"
    tools:showIn="@layout/activity_recapmatch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33A8A8A8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/string_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginBottom="20px"
            android:background="#33A8A8A8"
            android:gravity="center|right"
            android:lineSpacingExtra="12sp"
            android:text="@string/match"
            android:textColor="#304848"
            android:textSize="26sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_gagnant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/gagnant"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/nom_gagnant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_duree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/Balle"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/temps_match"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="80px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lat_string"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="right|center_horizontal|center_vertical"
                android:text="@string/latitude"
                android:textAllCaps="true"
                android:textColor="#304848"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textSize="14sp"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/lng_string"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="right|center_horizontal|center_vertical"
                android:text="@string/lng"
                android:textAllCaps="true"
                android:textColor="#304848"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/lng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textSize="14sp"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <TextView
            android:id="@+id/string_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="#33A8A8A8"
            android:lineSpacingExtra="12sp"
            android:text="@string/Statistiques"
            android:textColor="#304848"
            android:textSize="26sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_vide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:textSize="20sp"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/afficher_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/afficher_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_ACES"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/aces"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/ace_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/ace_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/points"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/points_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/points_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_fautes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/fautes"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/fautes_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/fautes_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_LET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/let"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/let_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/let_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/string_manches"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/manches"
                android:textColor="#304848"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/manches_joueur1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/manches_joueur2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#33A8A8A8"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/gallery_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#CCCAA882"
                android:tint="#070000"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/return_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:background="#CCCAA882"
                android:onClick="myClickHandlerRetour"
                android:text="@string/retour"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>